            <LinearLayout
                android:id="@+id/llAadharDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtHdID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID : "
                        android:textColor="@android:color/white" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/txtHdID"
                        android:text=""
                        android:textColor="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtHdName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name : "
                        android:textColor="@android:color/white" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/txtHdName"
                        android:text=""
                        android:textColor="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtHdGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender : "
                        android:textColor="@android:color/white" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/txtHdGender"
                        android:text=""
                        android:textColor="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtHdYob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YOB : "
                        android:textColor="@android:color/white" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtYOB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/txtHdYob"
                        android:text=""
                        android:textColor="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtHdCO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CO : "
                        android:textColor="@android:color/white" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtCO"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/txtHdCO"
                        android:text=""
                        android:textColor="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtHdLM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LM : "
                        android:textColor="@android:color/white" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtLM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/txtHdLM"
                        android:text=""
                        android:textColor="@android:color/white" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtHdVTC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VTC : "
                        android:textColor="@android:color/white" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtVTC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/txtHdVTC"
                        android:text=""
                        android:textColor="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtHdPO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PO : "
                        android:textColor="@android:color/white" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtPO"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/txtHdPO"
                        android:text=""
                        android:textColor="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtHdDist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dist : "
                        android:textColor="@android:color/white" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtDist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/txtHdDist"
                        android:text=""
                        android:textColor="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtHdState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="State : "
                        android:textColor="@android:color/white" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/txtHdState"
                        android:text=""
                        android:textColor="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtHdPC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PC : "
                        android:textColor="@android:color/white" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtPC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/txtHdPC"
                        android:text=""
                        android:textColor="@android:color/white" />
                </RelativeLayout>


            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnSubmitVisit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_gravity="right"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>